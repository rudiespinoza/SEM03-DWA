<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Crear Producto</h3>
                </div>
                <div class="card-body">
                    {{#if error}}
                        <div class="alert alert-danger">{{error}}</div>
                    {{/if}}
                    {{#if success}}
                        <div class="alert alert-success">{{success}}</div>
                    {{/if}}
                    <form action="/almacen/add-producto" method="post">
                        <div class="input-group mt-2">
                            <label for="nombreProducto" class="input-group-text">Nombre Producto</label>
                            <input class="form-control" type="text" name="nombreProducto" id="nombreProducto" placeholder="Nombre" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="categoriaProducto" class="input-group-text">Categoría</label>
                            <input class="form-control" type="text" name="categoriaProducto" id="categoriaProducto" placeholder="Categoría" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="precioProducto" class="input-group-text">Precio</label>
                            <input class="form-control" type="number" step="0.01" name="precioProducto" id="precioProducto" placeholder="Precio" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Guardar</button>
                            <button class="btn btn-danger">
                                <a class="nav-link link-light" href="/">Cancelar</a>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
