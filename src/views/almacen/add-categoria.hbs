<div class="container d-flex flex-column align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg w-75 mb-5">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0">Gestión de Categorías</h2>
        </div>

        <!-- Formulario para agregar categoría -->
        <div class="card-body">
            <form action="/list-categoria" method="POST">
                <div class="form-group mb-4">
                    <label for="nombreCategoria" class="form-label">Nombre de la Categoría</label>
                    <input type="text" class="form-control" name="nombreCategoria" id="nombreCategoria" placeholder="Ingrese el nombre de la categoría" required>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Añadir Categoría
                    </button>
                </div>
            </form>
        </div>
    </div>

<!-- Listado de categorías -->
    <div class="card shadow-lg w-75">
        <div class="card-header bg-secondary text-white">
            <h4 class="text-center mb-0">Categorías Existentes</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover table-striped align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categorias}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.nombre}}</td>
                        <td>
                            <a href="/almacen/categoria/editar/{{this.id}}" class="btn btn-sm btn-warning mx-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a href="/almacen/categoria/eliminar/{{this.id}}" class="btn btn-sm btn-danger mx-1">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
