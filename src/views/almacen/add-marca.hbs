<div class="container d-flex flex-column align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg w-75 mb-5">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0">Gestión de Marcas</h2>
        </div>

        <!-- Formulario para agregar marca -->
        <div class="card-body">
            <form action="/almacen/marca/agregar" method="POST">
                <div class="mb-3">
                    <label for="nombreMarca" class="form-label">Nombre de la Marca</label>
                    <input type="text" class="form-control" id="nombreMarca" name="nombreMarca" placeholder="Ingrese el nombre de la marca" required>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Añadir Marca
                    </button>
                </div>
            </form>
        </div>
    </div>

<!-- Listado de marcas -->
    <div class="card shadow-lg w-75">
        <div class="card-header bg-secondary text-white">
            <h4 class="text-center mb-0">Marcas Existentes</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover table-striped align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nombre de Marca</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each marcas}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.nombre}}</td>
                        <td>
                            <a href="/almacen/marca/editar/{{this.id}}" class="btn btn-sm btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a href="/almacen/marca/eliminar/{{this.id}}" class="btn btn-sm btn-danger mx-1">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
